@model Student_Affairs.Models.Student
@{
    ViewBag.Title = "AddStudent";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="header">
                <h2 class="title" style="text-align: center">بيانات أساسية عن الطالب</h2>
            </div>
            <div class="content">
                @using (Html.BeginForm("AddStudent","Student",FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
              

                    <div class="row">

                        <div class="col-md-12">
                            <div class="row">
                                <div class="form-group">
                                    <div class="col-md-9 ">

                                        @Html.TextBoxFor(model => model.Name_AR, htmlAttributes: new { @class = "form-control", @type = "text" , @placeholder = "اسم الطالب باللغة العربية", @style = "text-align: center ; font-size: 18px" })
                                    </div>

                                    <div class="col-md-3"> <h3 style="font-size: 21px ; text-align: center ; margin-top: 5px">اسم الطالب باللغة العربية</h3></div>

                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row">

                        <div class="col-md-12">
                            <div class="row">
                                <div class="form-group">
                                    <div class="col-md-9 ">
                                
                                        @Html.TextBoxFor(model => model.Name_EN, htmlAttributes: new { @class = "form-control", @type = "text", @placeholder = "اسم الطالب باللغة الإنجليزية", @style = "text-align: center ; font-size: 18px" })
                                    </div>

                                    <div class="col-md-3"> <h3 style="font-size: 21px ; text-align: center ; margin-top: 5px">اسم الطالب باللغة الإنجليزية</h3></div>

                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row">

                        <div class="col-md-12">
                            <div class="row">
                                <div class="form-group">


                                    <div class="col-md-4 ">
                                     
                                        @Html.TextBoxFor(model => model.Religion, htmlAttributes: new { @class = "form-control", @type = "text", @placeholder = "الديانة", @style = "text-align: center ; font-size: 18px" })
                                    </div>

                                    <div class="col-md-2"> <h3 style="font-size: 21px ; text-align: center ; margin-top: 5px">الديانة</h3></div>





                                    <div class="form-group">
                                        <div class="col-md-4 ">
                                      
                                            @Html.TextBoxFor(model => model.Nationality, htmlAttributes: new { @class = "form-control", @type = "text", @placeholder = "الجنسية", @style = "text-align: center ; font-size: 18px" })
                                        </div>

                                        <div class="col-md-2"> <h3 style="font-size: 21px ; text-align: center ; margin-top: 5px">الجنسية</h3></div>




                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row">

                        <div class="col-md-12">

                            <div class="form-group">
                                <div class="col-md-9 ">
                                  
                                    @Html.TextBoxFor(model => model.residence, htmlAttributes: new { @class = "form-control", @type = "text", @placeholder = "محل الإقامة", @style = "text-align: center ; font-size: 18px" })
                                </div>

                                <div class="col-md-2 col-md-offset-1"> <h3 style="font-size: 21px ; text-align: center ; margin-top: 5px">محل الإقامة</h3></div>


                            </div>
                        </div>
                    </div>

                    <div class="row">

                        <div class="col-md-12">

                            <div class="form-group">


                                <div class="col-md-4 ">
                                  
                                    @Html.TextBoxFor(model => model.Place_Of_Birth, htmlAttributes: new { @class = "form-control", @type = "text", @placeholder = "محل الميلاد", @style = "text-align: center ; font-size: 18px" })
                                </div>

                                <div class="col-md-2"> <h3 style="font-size: 21px ; text-align: center ; margin-top: 5px">محل الميلاد</h3></div>






                                <div class="col-md-4  ">
                              
                                    @Html.TextBoxFor(model => model.Birth_Date, htmlAttributes: new { @class = "form-control  docs-date", @type = "text", @placeholder = "تاريخ الميلاد", @style = "text-align: center ; font-size: 18px" })
                                 
                                </div>

                                <div class="col-md-2"> <h3 style="font-size: 21px ; text-align: center ; margin-top: 5px">تاريخ الميلاد</h3></div>





                            </div>
                        </div>
                    </div>

                    <div class="row">

                        <div class="col-md-12">

                            <div class="form-group">


                                <div class="col-md-3 ">
                                  
                                    @Html.TextBoxFor(model => model.SSN_Place, htmlAttributes: new { @class = "form-control", @type = "text", @placeholder = "جهة صدورها", @style = "text-align: center ; font-size: 18px" })
                                </div>

                                <div class="col-md-2"> <h3 style="font-size: 21px ; text-align: center ; margin-top: 5px">جهة صدورها</h3></div>






                                <div class="col-md-4 ">
                               
                                    @Html.TextBoxFor(model => model.SSN, htmlAttributes: new { @class = "form-control", @type = "text", @placeholder = "الرقم القومي", @style = "text-align: center ; font-size: 18px" })
                                </div>

                                <div class="col-md-3"> <h3 style="font-size: 21px ; text-align: center ; margin-top: 5px">رقم بطاقة الرقم القومي</h3></div>




                            </div>

                        </div>
                    </div>

                    <div class="row">

                        <div class="col-md-12">

                            <div class="form-group">



                                <div class="col-md-4 col-md-offset-5">
                                   
                                    @Html.TextBoxFor(model => model.SSN_Date, htmlAttributes: new { @class = "form-control docs-date", @type = "text", @placeholder = "تاريخ صدورها", @style = "text-align: center ; font-size: 18px" })
                                </div>

                                <div class="col-md-3"> <h3 style="font-size: 21px ; text-align: center ; margin-top: 5px">تاريخ صدورها</h3></div>




                            </div>

                        </div>
                    </div>


                    <div class="row">

                        <div class="col-md-12">

                            <div class="form-group">


                                <div class="col-md-3 ">
                                

                                    @Html.TextBoxFor(model => model.Certificate_Year, htmlAttributes: new { @class = "form-control", @type = "text", @placeholder = "عام", @style = "text-align: center ; font-size: 18px" })
                                </div>

                                <div class="col-md-1"> <h3 style="font-size: 21px ; text-align: center ; margin-top: 5px">عام</h3></div>






                                <div class="col-md-4 ">
                                    @Html.TextBoxFor(model => model.Certificate, htmlAttributes: new { @class = "form-control", @type = "text", @placeholder = "الشهادة الدراسية", @style = "text-align: center ; font-size: 18px" })
                                </div>

                                <div class="col-md-4"> <h3 style="font-size: 21px ; text-align: center ; margin-top: 5px">الشهادة الدراسية الحاصل عليها الطالب</h3></div>




                            </div>

                        </div>
                    </div>
                    <div class="row">

                        <div class="col-md-12">

                            <div class="form-group">
                                <div class="col-md-9 ">
                                    
                                    @Html.TextBoxFor(model => model.School_Name, htmlAttributes: new { @class = "form-control", @type = "text", @placeholder = "اسم المدرسة", @style = "text-align: center ; font-size: 18px" })
                                </div>

                                <div class="col-md-2 col-md-offset-1"> <h3 style="font-size: 21px ; text-align: center ; margin-top: 5px">اسم المدرسة</h3></div>


                            </div>
                        </div>
                    </div>
                    <div class="row">

                        <div class="col-md-12">

                            <div class="form-group">
                                <div class="col-md-7 ">
                              
                                    @Html.TextBoxFor(model => model.School_Dir, htmlAttributes: new { @class = "form-control", @type = "text", @placeholder = "المديرية التعليمية التابعة لها المدرسة", @style = "text-align: center ; font-size: 18px" })


                                </div>

                                <div class="col-md-4 col-md-offset-1"> <h3 style="font-size: 21px ; text-align: center ; margin-top: 5px">المديرية التعليمية التابعة لها المدرسة</h3></div>


                            </div>
                        </div>
                    </div>
                    <div class="row">

                        <div class="col-md-12">

                            <div class="form-group">
                                <div class="col-md-9 ">
                                 
                                    @Html.TextBoxFor(model => model.Languages, htmlAttributes: new { @class = "form-control", @type = "text", @placeholder = "اللغات الأجنبية التي درسها", @style = "text-align: center ; font-size: 18px" })


                                </div>

                                <div class="col-md-3 "> <h3 style="font-size: 21px ; text-align: center ; margin-top: 5px">اللغات الأجنبية التي درسها</h3></div>


                            </div>
                        </div>
                    </div>
                    <div class="row">

                        <div class="col-md-12">

                            <div class="form-group">

                                <div class="col-md-4 col-md-offset-5">
                               
                                    @Html.TextBoxFor(model => model.Sitting_Number, htmlAttributes: new { @class = "form-control", @type = "text", @placeholder = "رقم جلوس الطالب", @style = "text-align: center ; font-size: 18px" })


                                </div>

                                <div class="col-md-3"> <h3 style="font-size: 21px ; text-align: center ; margin-top: 5px">رقم جلوس الطالب</h3></div>




                            </div>

                        </div>
                    </div>
                    <div class="row">

                        <div class="col-md-12">

                            <div class="form-group">


                                <div class="col-md-6 col-md-offset-3">
                                
                                    @Html.TextBoxFor(model => model.Department, htmlAttributes: new { @class = "form-control", @type = "text", @placeholder = "الشعبة التي تخرج منها", @style = "text-align: center ; font-size: 18px" })


                                </div>

                                <div class="col-md-3"> <h3 style="font-size: 21px ; text-align: center ; margin-top: 5px">  الشعبة التي تخرج منها </h3></div>

                            </div>
                        </div>
                    </div>
                    <div class="row">

                        <div class="col-md-12">

                            <div class="form-group">


                                <div class="col-md-7 col-md-offset-2">
                                  
                                    @Html.TextBoxFor(model => model.Total_Grade, htmlAttributes: new { @class = "form-control", @type = "text", @placeholder = "مجموع درجاته", @style = "text-align: center ; font-size: 18px" })


                                </div>

                                <div class="col-md-3"> <h3 style="font-size: 21px ; text-align: center ; margin-top: 5px">  مجموع درجاته </h3></div>

                            </div>
                        </div>
                    </div>
                    <div class="row">

                        <div class="col-md-12">

                            <div class="form-group">


                                <div class="col-md-7 col-md-offset-2">
                                
                                    @Html.TextAreaFor(model => model.Parent_Info, htmlAttributes: new { @class = "form-control", @type = "text", @placeholder = "اسم ولي الأمر ولقبه وصناعته وعنوانه ", @style = "text-align: center ;height:200px;resize: none; font-size: 20px" })


                                </div>

                                <div class="col-md-3"> <h3 style="font-size: 21px ; text-align: center ; margin-top: 5px">  اسم ولي الأمر ولقبه وصناعته وعنوانه</h3></div>

                            </div>
                        </div>
                    </div>
                    <div class="row">

                        <div class="col-md-12">
                            <div class="row">
                                <div class="form-group">


                                    <div class="col-md-4 ">
                                      
                                        @Html.TextBoxFor(model => model.Mobile, htmlAttributes: new { @class = "form-control", @type = "text", @placeholder = "الموبايل", @style = "text-align: center ; font-size: 18px" })


                                    </div>

                                    <div class="col-md-2"> <h3 style="font-size: 21px ; text-align: center ; margin-top: 5px">الموبايل</h3></div>





                                    <div class="form-group">
                                        <div class="col-md-4 ">
                                        

                                            @Html.TextBoxFor(model => model.Telephone, htmlAttributes: new { @class = "form-control", @type = "text", @placeholder = "تليفون المنزل", @style = "text-align: center ; font-size: 18px" })


                                        </div>

                                        <div class="col-md-2"> <h3 style="font-size: 21px ; text-align: center ; margin-top: 5px">تليفون المنزل</h3></div>




                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>





                    <button type="submit" class="btn btn-info btn-fill pull-right" style="margin-top: 20px;font-size: 25px;width:90px; margin-right: 25px"> حفظ</button>
                    <div class="clearfix"></div>
                }
            </div>
        </div>
    </div>

</div>


